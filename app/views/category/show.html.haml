.container
  .col-lg-9
    %hr/
    - @charities.each do |charity|
      .row
        .col-lg-5.col-md-5
          %a{href: "/#{charity.id}"}
            %img.img-responsive{alt: "", src: charity.avatar.url, width:458, height:257}/
        .col-lg-7.col-md-7
          = link_to "/#{charity.id}" do
            %h3= charity.title
            .progress
              .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "60", role: "progressbar", style: "width: 60%;"}
                60 000 / 40 000
          %p= charity.description
          %a.btn.btn-primary{href: "/#{charity.id}"}
            Искам да помогна
      %hr/
  .col-lg-3
    .well
      %h4 Категории
      %ul.list-unstyled
        - @categories.each do |category|
          %li
            %a{href: "#{category.id}"}= category.name
