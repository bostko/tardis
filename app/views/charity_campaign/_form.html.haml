.col-lg-9
  .row
    %h1 Създай кампания
    %hr/
    = form_for @charity_campaign, :html => {:multipart => true} do |f|
      - if @charity_campaign.errors[:title]
        %label.control-label
          = @charity_campaign.errors[:title].join ', '
      = f.text_field(:title, class: 'form-control', :placeholder => "Име на кампанията")

      %br/
      %br/

      - if @charity_campaign.errors[:category_ids]
        %label.control-label
          = @charity_campaign.errors[:category_ids].join ', '
      = f.select :category_ids, Category.all.collect {|x| [x.name, x.id]}, multple: true

      %br/
      %br/

      - if @charity_campaign.errors[:goal]
        %label.control-label
          = ['Моля задайте сума'].join ', '
      = f.number_field(:goal, class: 'form-control', :placeholder => "Цел")

      %br/
      %br/

      = f.date_field(:deadline, class: 'form-control', :placeholder => "Дата")

      %br/
      %br/

      - if @charity_campaign.errors[:avatar]
        %label.control-label
          = @charity_campaign.errors[:avatar].join ', '
      = f.file_field :avatar

      %br/
      %br/

      = f.text_area(:description, class: 'form-control', :placeholder => "Описание", :cols => 20, :rows => 10)

      %br/
      %br/

      = f.submit(class: "btn btn-default")
    %hr/
